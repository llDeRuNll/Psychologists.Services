{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Psychologist app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of psychologist app"
  },
  "servers": [
    {
      "url": "https://psyÑhologists.service.api"
    },
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Psychologists",
      "description": "Operations about psychologists."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/psychologists": {
      "get": {
        "tags": [
          "Psychologists"
        ],
        "summary": "Get psychologists (paginated)",
        "operationId": "getPsychologists",
        "description": "Returns a paginated list of psychologists with optional sorting and filtering.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "description": "Page number (1-based)"
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 10
            },
            "description": "Items per page"
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string",
              "enum": [
                "_id",
                "name",
                "specialization",
                "experience",
                "rating",
                "price_per_hour",
                "createdAt",
                "updatedAt"
              ]
            },
            "description": "Sort field"
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "asc"
            },
            "description": "Sort order"
          },
          {
            "in": "query",
            "name": "specialization",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "minExperience",
            "schema": {
              "type": "number",
              "minimum": 0
            },
            "description": "Minimal experience in years (numeric)"
          },
          {
            "in": "query",
            "name": "maxExperience",
            "schema": {
              "type": "number",
              "minimum": 0
            },
            "description": "Max experience in years (numeric)"
          },
          {
            "in": "query",
            "name": "minPrice",
            "schema": {
              "type": "number",
              "minimum": 0
            }
          },
          {
            "in": "query",
            "name": "maxPrice",
            "schema": {
              "type": "number",
              "minimum": 0
            }
          },
          {
            "in": "query",
            "name": "minRating",
            "schema": {
              "type": "number",
              "minimum": 0,
              "maximum": 5
            }
          },
          {
            "in": "query",
            "name": "maxRating",
            "schema": {
              "type": "number",
              "minimum": 0,
              "maximum": 5
            }
          },
          {
            "in": "query",
            "name": "license",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "initial_consultation",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/200.psychologists.list"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "post": {
        "tags": [
          "Psychologists"
        ],
        "summary": "Create psychologist",
        "operationId": "createPsychologist",
        "description": "Create a psychologist with payload",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "experience",
                  "price_per_hour",
                  "license",
                  "specialization",
                  "about"
                ],
                "properties": {
                  "name": {
                    "description": "Psychologist's name",
                    "type": "string",
                    "example": "Dr. Jane Smith"
                  },
                  "avatar": {
                    "type": "string",
                    "format": "binary"
                  },
                  "avatar_url": {
                    "description": "Avatar URL (optional, used if no file uploaded)",
                    "type": "string",
                    "example": "https://ftp.goit.study/img/avatars/1.jpg"
                  },
                  "experience": {
                    "description": "Experience as a human-readable string",
                    "type": "string",
                    "example": "5 years"
                  },
                  "price_per_hour": {
                    "description": "Hourly rate (>= 0)",
                    "type": "number",
                    "example": 100
                  },
                  "rating": {
                    "description": "Initial rating (0..5, optional)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 5,
                    "example": 4.5
                  },
                  "license": {
                    "description": "License text",
                    "type": "string",
                    "example": "Licensed Psychologist (License #12345)"
                  },
                  "specialization": {
                    "description": "Primary specialization",
                    "type": "string",
                    "example": "Cognitive Behavioral Therapy"
                  },
                  "initial_consultation": {
                    "description": "Initial consultation info (optional)",
                    "type": "string",
                    "example": "Free 15-minute initial consultation"
                  },
                  "about": {
                    "description": "About the psychologist",
                    "type": "string",
                    "example": "Licensed psychologist with CBT focus and 5 years of practice."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creates a psychologist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a Psychologist!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/psychologist"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/psychologists/{id}": {
      "get": {
        "tags": [
          "Psychologists"
        ],
        "summary": "Get psychologist by id",
        "operationId": "getPsychologist",
        "description": "Get psychologist by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "65ca67e7ae7f10c88b598384"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get psychologist by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found psychologist with id 65ca67e7ae7f10c88b598384!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/psychologist"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "put": {
        "tags": [
          "Psychologists"
        ],
        "summary": "Upsert psychologist (create or update)",
        "operationId": "upsertPsychologist",
        "description": "Updates a psychologist if exists, otherwise creates a new one (upsert).\n",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "68fff9a7b8f32292632fa4cb"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/psychologistUpsertPayload"
              }
            },
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/psychologistUpsertPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully upserted a psychologist!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/psychologist"
                    }
                  }
                }
              }
            }
          },
          "201": {
            "description": "Created (upsert)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully upserted a psychologist!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/psychologist"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "patch": {
        "tags": [
          "Psychologists"
        ],
        "summary": "Patch psychologist",
        "operationId": "patchPsychologist",
        "description": "Partial update (JSON or multipart/form-data).",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "68fff9a7b8f32292632fa4cb"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/psychologistUpsertPayload"
              }
            },
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/psychologistUpsertPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully patched psychologist!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/psychologist"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "delete": {
        "tags": [
          "Psychologists"
        ],
        "summary": "Delete psychologist",
        "operationId": "deletePsychologist",
        "description": "Delete psychologist by id.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "68fff9a7b8f32292632fa4cb"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Psychologist deleted"
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "403": {
            "$ref": "#/components/responses/403"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register user",
        "operationId": "registerUser",
        "description": "Create a new user account.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/authRegisterPayload"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        },
        "security": []
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login",
        "operationId": "login",
        "description": "Login with email and password. Returns accessToken in body and sets HttpOnly refreshToken cookie.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/authLoginPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged in",
            "headers": {
              "Set-Cookie": {
                "description": "refreshToken cookie (HttpOnly; Path=/; Max-Age=2592000; SameSite=Lax)",
                "schema": {
                  "type": "string"
                },
                "example": "refreshToken=abc.def.ghi; HttpOnly; Path=/; Max-Age=2592000; SameSite=Lax"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authTokens"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        },
        "security": []
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Refresh access token",
        "operationId": "refresh",
        "description": "Issue new accessToken using refreshToken cookie.\n",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Refreshed",
            "headers": {
              "Set-Cookie": {
                "description": "new refreshToken cookie (HttpOnly)",
                "schema": {
                  "type": "string"
                },
                "example": "refreshToken=new.token.here; HttpOnly; Path=/; Max-Age=2592000; SameSite=Lax"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/authTokens"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout",
        "operationId": "logout",
        "description": "Invalidate session and clear refreshToken cookie.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Logged out",
            "headers": {
              "Set-Cookie": {
                "description": "Clears refreshToken cookie",
                "schema": {
                  "type": "string"
                },
                "example": "refreshToken=; HttpOnly; Path=/; Max-Age=0; SameSite=Lax"
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "refreshToken"
      }
    },
    "schemas": {
      "psychologist": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Mongo ObjectId",
            "pattern": "^[a-fA-F0-9]{24}$",
            "example": "68fff9a7b8f32292632fa4cc"
          },
          "name": {
            "type": "string",
            "example": "Dr. Jane Smith"
          },
          "avatar_url": {
            "type": "string",
            "format": "uri",
            "example": "https://ftp.goit.study/img/avatars/1.jpg"
          },
          "experience": {
            "type": "string",
            "description": "Years of experience in text form",
            "example": "5 years"
          },
          "price_per_hour": {
            "type": "number",
            "minimum": 0,
            "example": 100
          },
          "reviews": {
            "type": "array"
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5,
            "default": 0,
            "example": 4.5
          },
          "license": {
            "type": "string",
            "example": "Licensed Psychologist (License #12345)"
          },
          "specialization": {
            "type": "string",
            "example": "Cognitive Behavioral Therapy"
          },
          "initial_consultation": {
            "type": "string",
            "example": "Free 15-minute initial consultation"
          },
          "about": {
            "type": "string",
            "maxLength": 8000,
            "example": "Licensed psychologist with CBT focus and 5 years of practice."
          },
          "ParentUserId": {
            "type": "string",
            "description": "Reference to users._id",
            "pattern": "^[a-fA-F0-9]{24}$",
            "example": "6903c1b40b8a4cb0b156c14c"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "experience",
          "price_per_hour",
          "license",
          "specialization",
          "about"
        ]
      },
      "psychologistUpsertPayload": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "example": "Dr. Jane Smith"
          },
          "avatar_url": {
            "type": "string",
            "format": "uri",
            "example": "https://ftp.goit.study/img/avatars/1.jpg"
          },
          "experience": {
            "type": "string",
            "example": "5 years"
          },
          "price_per_hour": {
            "type": "number",
            "minimum": 0,
            "example": 100
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5,
            "example": 4.5
          },
          "license": {
            "type": "string",
            "example": "Licensed Psychologist (License"
          },
          "specialization": {
            "type": "string",
            "example": "Cognitive Behavioral Therapy"
          },
          "initial_consultation": {
            "type": "string",
            "example": "Free 15-minute initial consultation"
          },
          "about": {
            "type": "string",
            "example": "Short bio..."
          },
          "avatar": {
            "type": "string",
            "format": "binary",
            "description": "Avatar image file (when using multipart/form-data)"
          }
        }
      },
      "authRegisterPayload": {
        "type": "object",
        "required": [
          "email",
          "password",
          "name",
          "role"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "example": "qwerty123"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "role": {
            "type": "string",
            "enum": [
              "psychologist",
              "client"
            ],
            "example": "client"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "email",
          "role",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "example": "691b615c9c3a84a086d89427"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "role": {
            "type": "string",
            "enum": [
              "psychologist",
              "client"
            ],
            "example": "client"
          },
          "avatar_url": {
            "type": "string",
            "format": "uri",
            "example": "https://ftp.goit.study/img/avatars/1.jpg"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "authLoginPayload": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "qwerty123"
          }
        }
      },
      "authTokens": {
        "type": "object",
        "required": [
